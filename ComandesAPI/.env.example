# Plantilla .env - Copiar a .env y configurar amb valors reals

# Configuració de MariaDB/MySQL per a Docker
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=databaseapi
MYSQL_USER=userapi
MYSQL_PASSWORD=passwordapi
MYSQL_PORT=3306

# Variables per a l'aplicació (opcionals si s'usa appsettings)
DB_HOST=localhost
DB_NAME=comandesjdsr
DB_USER=userapi
DB_PASS=passwordapi

# JWT Configuration (per a producció - usa variables d'entorn)
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG!
JWT_ISSUER=ComandesJSDR
JWT_AUDIENCE=ComandesJSDR-API

